
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<h2>Register</h2>
<form asp-action="Register" asp-controller="Account" method="Post" class="col-12 form-horizontal" role="form">

    <div asp-validation-summary="All" class="text-danger"></div>


    <div class="form-group">
        <label asp-for="@Model.Username" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="@Model.Username" class="form-control" />
            <span asp-validation-for="@Model.Username" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ContactId" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <select asp-for="@Model.ContactId" asp-items="@Model.ContactList" class="form-group col-5 btn btn-primary ">
                <option value="-1">Select Contact</option>
            </select>
            <span asp-validation-for="@Model.ContactId" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="@Model.Password" class="form-control" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ConfirmPassword" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="@Model.ConfirmPassword" class="form-control" />
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Register" />
        </div>
    </div>

</form>







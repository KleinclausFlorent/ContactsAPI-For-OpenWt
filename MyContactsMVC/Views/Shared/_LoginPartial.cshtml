
<!-- Define the header part for the account gestion-->
@if (Context.Session.GetString("token") == null)
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
else
{
    <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <span class="btn btn-dark">@Context.Session.GetString("username") </span>
            </li>
            <li>
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logoff">Log off</a>
            </li>
        </ul>
    </form>
}